@page "/fetchdata"
@using BlazorApp.Shared 
@using ServiceHealthReader.Data.Models;
@using System.Text.Json;
@using System.Text.Json.Serialization;
@inject HttpClient Http

<h1>Issues</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (issues == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tenant</th>
                <th>Issue</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in issues)
            {
                <tr>
                    <td>@issue.Id</td>
                    <td>@issue.Tenant?.TenantId</td>
                    <td>@issue.ServiceHealthIssue?.ImpactDescription</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Issue[] issues = new Issue[] { };

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var str = await Http.GetStringAsync("/api/Announcements");

            // parse str JSON into issues[] using System.Text.JSON
            issues = JsonSerializer.Deserialize<Issue[]>(str, new JsonSerializerOptions()
            {
                ReferenceHandler = ReferenceHandler.Preserve,
                
            });
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.ToString());
            Console.Write(ex.StackTrace);
        }
    }
}
